---
import { proyectos } from "../../public/cvs/infoPorfolio";
import CardProyectos from "../components/CardProyectos.astro";
---

<section id="portafolio">
    <h2 class="text-2xl font-bold text-chill-50 font-cinzel">Portafolio</h2>
    <section class="flex flex-col gap-4">
        {
            proyectos.map((proyecto, index) => {
                const isEven = index % 2 === 0 ? 'derecha' : 'izquierda';
                    return (
                        <CardProyectos
                            isEven={isEven}
                            urlImg={proyecto.img}
                            urlSitio={proyecto.url}
                            urlRepo={proyecto.repo}
                            nombre={proyecto.nombre}
                            descrip={proyecto.descrip}
                            tecn={proyecto.tecn}
                        />
                    );
                },
            )
        }
    </section>
    <h2 class="text-2xl font-bold text-chill-50 font-cinzel my-6">Skills</h2>
    <p>Muy pronto</p>
    <section></section>
</section>
