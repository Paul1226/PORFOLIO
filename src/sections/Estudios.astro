---
import LiEstudios from "../components/literales/LiEstudios.astro"
import { educacion } from "../../public/cvs/infoPorfolio";
import { experiencia } from "../../public/cvs/infoPorfolio";

---
<article class="[grid-area:estudios] flex flex-col gap-8 lg:flex-row" id="estudios">
    <div class="first-content">
        <div class="lg:sticky lg:top-0">
            <h2 class="text-3xl font-bold text-chill-50 font-cinzel">Estudios</h2>
            <ol class="relative mt-6 w-full max-w-[800px] mx-auto">
                {
                    educacion.map(({institucion, titulo, inicio, fin, descripcion}) => {
                        return <LiEstudios titulo={institucion} subtitulo={titulo} fecha=`${fin} - ${inicio}` contenido={descripcion}/>
                    })
                }
            </ol>
        </div>
    </div>
    <div class="second-content">
        <h2 class="text-3xl font-bold text-chill-50 font-cinzel">Experiencia</h2>
        <ol class="relative mt-6 w-full max-w-[800px] mx-auto">
            {
                experiencia.map(({proyecto, descripcion, subtitulo, link, fin, inicio})=>{
                    return <LiEstudios titulo={proyecto} subtitulo={subtitulo} fecha=`${fin} - ${inicio}` contenido={descripcion} link={link}/>
                })
            }
        </ol>
    </div>
</article>
